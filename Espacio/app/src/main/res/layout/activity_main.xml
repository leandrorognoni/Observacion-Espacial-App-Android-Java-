<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteY="314dp" />

    <LinearLayout
        android:layout_width="249dp"
        android:layout_height="353dp"
        android:gravity="fill_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/fondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fondo"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/aLuna"
            android:layout_width="174dp"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#80000000"
            android:onClick="luna"
            android:text="La Luna Ahora" />

        <Button
            android:id="@+id/solar"
            android:layout_width="174dp"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#80000000"
            android:onClick="sol"
            android:text="Observatorio Solar" />

        <Button
            android:id="@+id/delDia"
            android:layout_width="174dp"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#80000000"
            android:onClick="imagDia"
            android:text="Imagen del dÃ­a" />

        <Button
            android:id="@+id/constelacion"
            android:layout_width="174dp"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#80000000"
            android:onClick="buscarConstelacion"
            android:text="Buscador constelaciones" />

        <Button
            android:id="@+id/calcuGalaxia"
            android:layout_width="174dp"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#80000000"
            android:onClick="calcuGalaxia"
            android:text="Calculadora Galactiva" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>