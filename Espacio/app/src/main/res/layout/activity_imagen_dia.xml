<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ActividadImagDia">

  <ProgressBar
      android:id="@+id/pbar"
      style="@style/Widget.AppCompat.ProgressBar"
      android:layout_width="95dp"
      android:layout_height="69dp"
      android:background="#000000"
      android:backgroundTint="#000000"
      android:progressTint="#394E8C"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        android:textAlignment="center"
        android:textColor="#999CDF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/sep23"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="2sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        app:srcCompat="@drawable/separador" />

    <ImageView
        android:id="@+id/sep24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="5sp"
        app:srcCompat="@drawable/separador" />

    <TextView
        android:id="@+id/subti1"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="5dp"
        android:textAlignment="center"
        android:textColor="#999CDF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/fecha"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:textColor="#999CDF"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iw1"
        android:layout_width="match_parent"
        android:layout_height="344dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/descopy"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textColor="#999CDF"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/sep19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/separador" />
  </LinearLayout>

  <Button
      android:id="@+id/volverAtras2"
      android:layout_width="159dp"
      android:layout_height="58dp"
      android:backgroundTint="#80000000"
      android:onClick="volver"
      android:text="Volver Atras"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/descopy"
      app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>